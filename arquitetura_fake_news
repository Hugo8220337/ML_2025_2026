// Arquitetura do Sistema de Fake News
digraph {
	rankdir=TB
	node [fontname=Helvetica shape=box style="rounded,filled"]
	Input [label="Input
(Notícia: Título + Corpo)" fillcolor="#E0F7FA" shape=note]
	Pre [label="Pré-processamento Geral
(Limpeza, Tokenização)" fillcolor="#F5F5F5"]
	subgraph cluster_level1 {
		color=grey label="Nível 1: Modelos Especialistas (Extração de Features)" style=dashed
		node [fillcolor="#FFF9C4"]
		M1 [label="M1: Classificação
de Tópicos
(All The News)"]
		M2 [label="M2: Deteção de
Anomalias
(ISOT - Reuters)"]
		M3 [label="M3: Stance
Detection
(FNC-1)"]
		M4 [label="M4: Deteção de
Clickbait
(Clickbait Dataset)"]
	}
	Features [label="Vetor de Meta-Features
(Probabilidades M1, Score M2, Classe M3, Score M4)" fillcolor="#E1BEE7" shape=parallelogram]
	Meta [label="Meta-Classificador
(Modelo Final - FakeNewsNet)" fillcolor="#B2EBF2" shape=box3d]
	Output [label="Classificação Final:
Real vs Fake" fillcolor="#C8E6C9" shape=ellipse style="filled,bold"]
	Input -> Pre
	Pre -> M1
	Pre -> M2
	Pre -> M3
	Pre -> M4
	M1 -> Features [label="Tópico"]
	M2 -> Features [label="Score Anomalia"]
	M3 -> Features [label=Stance]
	M4 -> Features [label="Score Clickbait"]
	Features -> Meta
	Meta -> Output
}
